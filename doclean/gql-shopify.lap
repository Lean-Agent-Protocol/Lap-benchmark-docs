@doclean v0.1
@api Shopify
@base /graphql

type Collection:Node{id:id!,title:str!,handle:str!,descriptionHtml:str,image:Image,products(first:int,after:str,sortKey:ProductCollectionSortKeys):ProductConnection!,updatedAt:str!}
type CollectionConnection{edges:[CollectionEdge!]!,pageInfo:PageInfo!}
type CollectionEdge{cursor:str!,node:Collection!}
enum CurrencyCode=USD|EUR|GBP|CAD|AUD|JPY
type Customer:Node,HasMetafields{id:id!,firstName:str,lastName:str,email:str,phone:str,ordersCount:int!,totalSpent:MoneyV2!,addresses(first:int):MailingAddressConnection!,orders(first:int,after:str,sortKey:OrderSortKeys):OrderConnection!,tags:[str!]!,metafields(first:int,after:str,namespace:str):MetafieldConnection!,createdAt:str!,updatedAt:str!}
type CustomerConnection{edges:[CustomerEdge!]!,pageInfo:PageInfo!}
type CustomerCreatePayload{customer:Customer,userErrors:[UserError!]!}
type CustomerEdge{cursor:str!,node:Customer!}
input CustomerInput{firstName:str,lastName:str,email:str,phone:str,tags:[str!],addresses:[MailingAddressInput!]}
type DiscountCode{code:str!,discountType:DiscountType!,value:num!}
enum DiscountType=PERCENTAGE|FIXED_AMOUNT
iface HasMetafields{metafields(first:int,after:str,namespace:str):MetafieldConnection!}
type Image:Node{id:id!,altText:str,src:str!,width:int,height:int}
type ImageConnection{edges:[ImageEdge!]!,pageInfo:PageInfo!}
type ImageEdge{cursor:str!,node:Image!}
input ImageInput{altText:str,src:str}
type InventoryItem:Node{id:id!,sku:str,tracked:bool!,inventoryLevels(first:int):InventoryLevelConnection!}
type InventoryLevel{id:id!,available:int!,location:Location!}
type InventoryLevelConnection{edges:[InventoryLevelEdge!]!,pageInfo:PageInfo!}
type InventoryLevelEdge{cursor:str!,node:InventoryLevel!}
type LineItem:Node{id:id!,title:str!,quantity:int!,variant:ProductVariant,originalTotalPrice:MoneyV2!,discountedTotalPrice:MoneyV2!,sku:str}
type LineItemConnection{edges:[LineItemEdge!]!,pageInfo:PageInfo!}
type LineItemEdge{cursor:str!,node:LineItem!}
input LineItemInput{variantId:id!,quantity:int!}
type Location:Node{id:id!,name:str!,address:MailingAddress,isActive:bool!}
type MailingAddress:Node{id:id!,address1:str,address2:str,city:str,province:str,country:str,zip:str,phone:str,firstName:str,lastName:str}
type MailingAddressConnection{edges:[MailingAddressEdge!]!,pageInfo:PageInfo!}
type MailingAddressEdge{cursor:str!,node:MailingAddress!}
input MailingAddressInput{address1:str,address2:str,city:str,province:str,country:str,zip:str,phone:str}
type Metafield:Node{id:id!,namespace:str!,key:str!,value:str!,type:str!}
type MetafieldConnection{edges:[MetafieldEdge!]!,pageInfo:PageInfo!}
type MetafieldEdge{cursor:str!,node:Metafield!}
type Money{amount:str!,currencyCode:CurrencyCode!}
type MoneyV2{amount:num!,currencyCode:CurrencyCode!}
iface Node{id:id!}
type Order:Node{id:id!,name:str!,orderNumber:int!,email:str,phone:str,financialStatus:OrderFinancialStatus!,fulfillmentStatus:OrderFulfillmentStatus!,totalPrice:MoneyV2!,subtotalPrice:MoneyV2!,totalTax:MoneyV2,totalShippingPrice:MoneyV2,lineItems(first:int,after:str):LineItemConnection!,customer:Customer,shippingAddress:MailingAddress,billingAddress:MailingAddress,discountCodes:[str!]!,note:str,tags:[str!]!,createdAt:str!,processedAt:str!,cancelledAt:str}
type OrderConnection{edges:[OrderEdge!]!,pageInfo:PageInfo!}
type OrderCreatePayload{order:Order,userErrors:[UserError!]!}
type OrderEdge{cursor:str!,node:Order!}
enum OrderFinancialStatus=PENDING|AUTHORIZED|PARTIALLY_PAID|PAID|PARTIALLY_REFUNDED|REFUNDED|VOIDED
enum OrderFulfillmentStatus=UNFULFILLED|PARTIALLY_FULFILLED|FULFILLED|RESTOCKED
input OrderInput{email:str,note:str,tags:[str!],shippingAddress:MailingAddressInput,lineItems:[LineItemInput!]}
enum OrderSortKeys=CREATED_AT|UPDATED_AT|TOTAL_PRICE|ORDER_NUMBER
type PageInfo{hasNextPage:bool!,hasPreviousPage:bool!,startCursor:str,endCursor:str}
type Product:Node,HasMetafields{id:id!,title:str!,handle:str!,descriptionHtml:str,vendor:str,productType:str,status:ProductStatus!,tags:[str!]!,totalInventory:int,variants(first:int,after:str):ProductVariantConnection!,images(first:int,after:str):ImageConnection!,metafields(first:int,after:str,namespace:str):MetafieldConnection!,createdAt:str!,updatedAt:str!,publishedAt:str}
enum ProductCollectionSortKeys=TITLE|PRICE|BEST_SELLING|CREATED|MANUAL
type ProductConnection{edges:[ProductEdge!]!,pageInfo:PageInfo!}
type ProductCreatePayload{product:Product,userErrors:[UserError!]!}
input ProductDeleteInput{id:id!}
type ProductDeletePayload{deletedProductId:id,userErrors:[UserError!]!}
type ProductEdge{cursor:str!,node:Product!}
input ProductInput{title:str,descriptionHtml:str,vendor:str,productType:str,tags:[str!],status:ProductStatus,variants:[ProductVariantInput!],images:[ImageInput!]}
enum ProductStatus=ACTIVE|ARCHIVED|DRAFT
type ProductUpdatePayload{product:Product,userErrors:[UserError!]!}
type ProductVariant:Node{id:id!,title:str!,sku:str,price:MoneyV2!,compareAtPrice:MoneyV2,inventoryQuantity:int,weight:num,weightUnit:WeightUnit,barcode:str,image:Image,selectedOptions:[SelectedOption!]!,product:Product!}
type ProductVariantConnection{edges:[ProductVariantEdge!]!,pageInfo:PageInfo!}
type ProductVariantEdge{cursor:str!,node:ProductVariant!}
input ProductVariantInput{title:str,sku:str,price:str,compareAtPrice:str,weight:num,weightUnit:WeightUnit,barcode:str}
type SelectedOption{name:str!,value:str!}
type Shop{name:str!,email:str!,currencyCode:CurrencyCode!,primaryDomain:ShopDomain!,myshopifyDomain:str!,plan:ShopPlan!}
type ShopDomain{host:str!,url:str!}
type ShopPlan{displayName:str!,partnerDevelopment:bool!,shopifyPlus:bool!}
type UserError{field:[str!],message:str!}
enum WeightUnit=KILOGRAMS|GRAMS|POUNDS|OUNCES

Q shop->Shop!
Q product(id:id!)->Product
Q products(first:int,after:str,query:str,sortKey:OrderSortKeys)->ProductConnection!
Q order(id:id!)->Order
Q orders(first:int,after:str,query:str)->OrderConnection!
Q customer(id:id!)->Customer
Q customers(first:int,after:str,query:str)->CustomerConnection!
Q collection(id:id!)->Collection
Q collections(first:int,after:str)->CollectionConnection!
Q node(id:id!)->Node
M productCreate(input:ProductInput!)->ProductCreatePayload!
M productUpdate(input:ProductInput!)->ProductUpdatePayload!
M productDelete(input:ProductDeleteInput!)->ProductDeletePayload!
M customerCreate(input:CustomerInput!)->CustomerCreatePayload!
M orderCreate(input:OrderInput!)->OrderCreatePayload!
